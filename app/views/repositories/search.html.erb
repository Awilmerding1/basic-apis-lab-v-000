<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
	<div>
	<% if @repos %>
	    <ul>
	    <% @repos.each do |repo| %>
	      <li>
	        <h5>Repo Name:<%= repo["name"] %></h5>
	        <h6>Repo Url:<%= repo["html_url"] %></h6>
	        <%= repo["description"] %><br>
	      </li>
	    <% end %>
	    </ul>
	   <% end %>
	</div>
